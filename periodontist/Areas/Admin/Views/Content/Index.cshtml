
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.ActionLink("Добавить статью","AddArticle","Content")

<div id="listArticles" class="listArticles">

    <div class="blogPostItem" v-for="article in articles">
        <h4 class="blogPostItem-header">{{article.Title}}</h4>
        <span class="blogPostItem-content" v-html="trimText(article.Text)"></span>
        @*<router-link to="content/UpdateArticle?ID=article.ID">Перейти к Foo</router-link>*@
        <button class="updateArticle_btn" v-on:click="updateArticle(article.ID)">Редактировать</button>
        <button class="removeArticle_btn" v-on:click="removeArticle">Удалить</button>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Admin/content/content.js"></script>
}